{
  "name": "html-boilerplate",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^18.0.0"
  },
  "config": {
    "paths": {
      "src": "src",
      "dist": "dist",
      "publicPath": "/path/to/public/",
      "cssRoot": "assets/css",
      "javascriptRoot": "assets/js"
    },
    "assetModuleFilename": "[name]-[contenthash]",
    "assetResourcesRegExp": "\\.(ico|mp4|webm|woff2?)$",
    "copyResourcesGlobPattern": "**/*.{txt,pdf}"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn",
    "clean": "rm -rf $npm_package_config_paths_dist node_modules yarn.lock yarn-error.log .*lintcache .tsconfig.tsbuildinfo",
    "dev": "webpack serve --host local-ip --port 3000 --open --static $npm_package_config_paths_src",
    "lint:pug": "prettier \"$npm_package_config_paths_src/**/*.pug\" --cache --write",
    "lint:style": "stylelint \"$npm_package_config_paths_src/**/*.scss\" --fix --cache && prettier \"$npm_package_config_paths_src/**/*.scss\" --write",
    "lint:javascript": "eslint \"$npm_package_config_paths_src/**/*.[jt]s?(x)\" --fix --cache && prettier \"$npm_package_config_paths_src/**/*.[jt]s?(x)\" --cache --write",
    "lint": "yarn lint:pug & yarn lint:style & yarn lint:javascript & yarn tsc",
    "prebuild": "yarn lint",
    "build": "NODE_ENV=production webpack"
  },
  "lint-staged": {
    "*.pug": "yarn lint:pug",
    "*.scss": "yarn lint:style",
    "*.[jt]s?(x)": "yarn lint:javascript"
  },
  "dependencies": {
    "core-js": "3.26.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@prettier/plugin-pug": "2.3.0",
    "@types/friendly-errors-webpack-plugin": "0.1.4",
    "@types/glob": "8.0.0",
    "@types/html-webpack-plugin": "3.2.6",
    "@types/sass": "1.43.1",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "autoprefixer": "10.4.13",
    "babel-loader": "9.1.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "4.2.2",
    "eslint": "8.26.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "glob": "8.0.3",
    "husky": "8.0.1",
    "image-minimizer-webpack-plugin": "3.8.0",
    "imagemin": "8.0.1",
    "imagemin-svgo": "10.0.1",
    "lightningcss": "1.16.0",
    "lint-staged": "13.0.3",
    "postcss": "8.4.18",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "7.0.1",
    "postcss-media-minmax": "5.0.0",
    "postcss-sort-media-queries": "4.3.0",
    "prettier": "2.7.1",
    "pug-plugin": "4.5.0",
    "sass": "1.56.0",
    "sass-loader": "13.1.0",
    "sharp": "0.31.2",
    "stylelint": "14.14.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-recommended-scss": "8.0.0",
    "stylelint-no-unsupported-browser-features": "6.0.1",
    "stylelint-prettier": "2.0.0",
    "svgo": "3.0.0",
    "tsconfig-paths-webpack-plugin": "4.0.0",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  }
}
