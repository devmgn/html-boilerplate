{
  "name": "html-sandbox",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "config": {
    "directory": {
      "src": "src",
      "dist": "dist",
      "javascript": "assets/js",
      "publicPath": "/path/to/public/"
    },
    "resourcesRegExp": "\\.(ico|mp4|webm|woff2?)$",
    "targetsPatternToCopy": "**/*.{txt,pdf}",
    "placeholders": "[name]-[contenthash]"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn",
    "clean": "rm -rf $npm_package_config_directory_dist node_modules yarn.lock yarn-error.log .*lintcache",
    "start": "webpack serve --host local-ip --port 3000 --open --static $npm_package_config_directory_src",
    "lint:pug": "prettier \"$npm_package_config_directory_src/**/*.pug\" --write",
    "lint:scss": "stylelint \"$npm_package_config_directory_src/**/*.scss\" --fix --cache && prettier \"$npm_package_config_directory_src/**/*.scss\" --write",
    "lint:javascript": "eslint \"$npm_package_config_directory_src/**/*.[jt]s?(x)\" --fix --cache && prettier \"$npm_package_config_directory_src/**/*.[jt]s?(x)\" --write",
    "lint": "yarn lint:pug & yarn lint:scss & yarn lint:javascript",
    "prebuild": "yarn lint",
    "build": "NODE_ENV=production webpack"
  },
  "lint-staged": {
    "*.pug": "yarn lint:pug",
    "*.scss": "yarn lint:scss",
    "*.[jt]s?(x)": "yarn lint:javascript"
  },
  "dependencies": {
    "core-js": "3.17.2",
    "dom4": "2.1.6",
    "object-fit-images": "3.2.4"
  },
  "devDependencies": {
    "@babel/core": "7.15.4",
    "@babel/preset-env": "7.15.4",
    "@babel/preset-typescript": "7.15.0",
    "@prettier/plugin-pug": "1.16.5",
    "@types/clean-webpack-plugin": "0.1.3",
    "@types/copy-webpack-plugin": "8.0.1",
    "@types/css-minimizer-webpack-plugin": "3.0.2",
    "@types/dom4": "2.0.2",
    "@types/friendly-errors-webpack-plugin": "0.1.4",
    "@types/glob": "7.1.4",
    "@types/html-webpack-plugin": "3.2.6",
    "@types/mini-css-extract-plugin": "2.2.0",
    "@types/object-fit-images": "3.2.2",
    "@types/sass": "1.16.1",
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "autoprefixer": "10.3.4",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.2.0",
    "css-minimizer-webpack-plugin": "3.0.2",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.4.0",
    "eslint-plugin-import": "2.24.2",
    "friendly-errors-webpack-plugin": "1.7.0",
    "glob": "7.1.7",
    "html-webpack-plugin": "5.3.2",
    "husky": "7.0.2",
    "image-minimizer-webpack-plugin": "2.2.0",
    "imagemin-gifsicle": "7.0.0",
    "imagemin-mozjpeg": "9.0.0",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "9.0.0",
    "lint-staged": "11.1.2",
    "mini-css-extract-plugin": "2.2.2",
    "postcss": "8.3.6",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "6.1.1",
    "postcss-object-fit-images": "1.1.2",
    "postcss-selector-not": "5.0.0",
    "postcss-sort-media-queries": "3.11.12",
    "prettier": "2.3.2",
    "pug": "3.0.2",
    "pug-loader": "2.4.0",
    "sass": "1.39.0",
    "sass-loader": "12.1.0",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended-scss": "4.3.0",
    "stylelint-order": "4.1.0",
    "stylelint-prettier": "1.2.0",
    "stylelint-scss": "3.20.1",
    "svgo": "2.5.0",
    "terser-webpack-plugin": "5.2.2",
    "typescript": "4.4.2",
    "webpack": "5.51.2",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.1.0",
    "webpack-remove-empty-scripts": "0.7.1"
  }
}
