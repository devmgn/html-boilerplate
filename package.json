{
  "name": "html-boilerplate",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "20.12.0"
  },
  "packageManager": "yarn@4.1.1",
  "config": {
    "paths": {
      "src": "src",
      "dist": "dist",
      "publicPath": "/path/to/public/",
      "cssRoot": "assets/css",
      "javascriptRoot": "assets/js"
    },
    "assetModuleFilename": "[name]-[contenthash]",
    "assetResourcesRegExp": "\\.(ico|mp4|webm|woff2?)$",
    "copyResourcesGlobPattern": "**/*.{txt,pdf}"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn",
    "clean": "rm -rf $npm_package_config_paths_dist node_modules yarn.lock yarn-error.log .*lintcache .tsconfig.tsbuildinfo",
    "dev": "webpack serve --host local-ip --port 3000 --open --static src/",
    "lint:pug": "prettier 'src/**/*.pug' --cache --write",
    "lint:style": "stylelint 'src/**/*.scss' --fix --cache && prettier 'src/**/*.scss' --write",
    "lint:javascript": "eslint 'src/**/*.[jt]s?(x)' --fix --cache && prettier 'src/**/*.[jt]s?(x)' --cache --write",
    "lint": "yarn lint:pug & yarn lint:style & yarn lint:javascript & yarn tsc",
    "prebuild": "yarn lint",
    "build": "NODE_ENV=production webpack"
  },
  "lint-staged": {
    "*.pug": "yarn lint:pug",
    "*.scss": "yarn lint:style",
    "*.[jt]s?(x)": "yarn lint:javascript"
  },
  "dependencies": {
    "core-js": "3.36.1"
  },
  "devDependencies": {
    "@babel/core": "7.24.3",
    "@babel/preset-env": "7.24.3",
    "@babel/preset-typescript": "7.24.1",
    "@prettier/plugin-pug": "3.0.0",
    "@types/friendly-errors-webpack-plugin": "0.1.7",
    "@types/glob": "8.1.0",
    "@types/html-webpack-plugin": "3.2.9",
    "@types/sass": "1.45.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "10.4.19",
    "babel-loader": "9.1.3",
    "copy-webpack-plugin": "12.0.2",
    "css-loader": "6.10.0",
    "css-minimizer-webpack-plugin": "6.0.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "glob": "10.3.10",
    "husky": "8.0.3",
    "image-minimizer-webpack-plugin": "4.0.0",
    "imagemin": "8.0.1",
    "imagemin-svgo": "10.0.1",
    "lightningcss": "1.24.1",
    "lint-staged": "15.2.2",
    "postcss": "8.4.38",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "8.1.1",
    "postcss-media-minmax": "5.0.0",
    "postcss-sort-media-queries": "5.2.0",
    "prettier": "3.2.5",
    "pug-plugin": "4.9.9",
    "sass": "1.72.0",
    "sass-loader": "14.1.1",
    "sharp": "0.33.3",
    "stylelint": "16.3.1",
    "stylelint-config-recess-order": "4.6.0",
    "stylelint-config-recommended-scss": "14.0.0",
    "svgo": "3.2.0",
    "tsconfig-paths-webpack-plugin": "4.1.0",
    "typescript": "5.4.3",
    "webpack": "5.91.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.2"
  }
}
