{
  "name": "html-sandbox",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "config": {
    "directory": {
      "src": "src",
      "dist": "dist",
      "publicPath": "/path/to/public/",
      "javascriptRoot": "assets/js"
    },
    "alias": {
      "@": [
        "assets/js",
        "assets/css",
        "assets/images"
      ]
    },
    "assetModuleFilename": "[name]-[contenthash]",
    "assetResourcesRegExp": "\\.(ico|mp4|webm|woff2?)$",
    "copyResourcesGlobPattern": "**/*.{txt,pdf}"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn",
    "clean": "rm -rf $npm_package_config_directory_dist node_modules yarn.lock yarn-error.log .*lintcache .tsconfig.tsbuildinfo",
    "dev": "webpack serve --host local-ip --port 3000 --open --static $npm_package_config_directory_src",
    "lint:pug": "prettier \"$npm_package_config_directory_src/**/*.pug\" --write",
    "lint:scss": "stylelint \"$npm_package_config_directory_src/**/*.scss\" --fix && prettier \"$npm_package_config_directory_src/**/*.scss\" --write",
    "lint:javascript": "eslint \"$npm_package_config_directory_src/**/*.[jt]s?(x)\" --fix --cache && prettier \"$npm_package_config_directory_src/**/*.[jt]s?(x)\" --write",
    "lint": "yarn lint:pug & yarn lint:scss & yarn lint:javascript & yarn tsc",
    "prebuild": "yarn lint",
    "build": "NODE_ENV=production webpack"
  },
  "lint-staged": {
    "*.pug": "yarn lint:pug",
    "*.scss": "yarn lint:scss",
    "*.[jt]s?(x)": "yarn lint:javascript"
  },
  "dependencies": {
    "core-js": "3.21.1",
    "dom4": "2.1.6"
  },
  "devDependencies": {
    "@babel/core": "7.17.7",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@prettier/plugin-pug": "1.19.3",
    "@types/dom4": "2.0.2",
    "@types/friendly-errors-webpack-plugin": "0.1.4",
    "@types/glob": "7.2.0",
    "@types/html-webpack-plugin": "3.2.6",
    "@types/sass": "1.43.1",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "autoprefixer": "10.4.4",
    "babel-loader": "8.2.3",
    "copy-webpack-plugin": "10.2.4",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "3.4.1",
    "eslint": "8.11.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "friendly-errors-webpack-plugin": "1.7.0",
    "glob": "7.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "7.0.4",
    "image-minimizer-webpack-plugin": "3.2.3",
    "imagemin": "8.0.1",
    "imagemin-gifsicle": "7.0.0",
    "imagemin-mozjpeg": "10.0.0",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "10.0.1",
    "lint-staged": "12.3.6",
    "mini-css-extract-plugin": "2.6.0",
    "postcss": "8.4.12",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "6.2.1",
    "postcss-sort-media-queries": "4.2.1",
    "prettier": "2.6.0",
    "pug": "3.0.2",
    "sass": "1.49.9",
    "sass-loader": "12.6.0",
    "simple-pug-loader": "0.2.1",
    "stylelint": "14.6.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-recommended-scss": "5.0.2",
    "stylelint-order": "5.0.0",
    "stylelint-prettier": "2.0.0",
    "stylelint-scss": "4.2.0",
    "svgo": "2.8.0",
    "terser-webpack-plugin": "5.3.1",
    "typescript": "4.6.2",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.4",
    "webpack-remove-empty-scripts": "0.7.3"
  }
}
