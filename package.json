{
  "name": "html-boilerplate",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "20.18.2"
  },
  "packageManager": "yarn@4.6.0",
  "config": {
    "paths": {
      "src": "src",
      "dist": "dist",
      "publicPath": "/path/to/public/",
      "cssRoot": "assets/css",
      "javascriptRoot": "assets/js"
    },
    "assetModuleFilename": "[name]-[contenthash]",
    "assetResourcesRegExp": "\\.(ico|mp4|webm|woff2?)$",
    "copyResourcesGlobPattern": "**/*.{txt,pdf}"
  },
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow yarn",
    "clean": "rm -rf $npm_package_config_paths_dist node_modules yarn.lock yarn-error.log .*lintcache .tsconfig.tsbuildinfo",
    "dev": "webpack serve --host local-ip --port 3000 --open --static src/",
    "lint:pug": "prettier 'src/**/*.pug' --cache --write",
    "lint:style": "stylelint 'src/**/*.scss' --fix --cache && prettier 'src/**/*.scss' --write",
    "lint:javascript": "eslint 'src/**/*.[jt]s?(x)' --fix --cache && prettier 'src/**/*.[jt]s?(x)' --cache --write",
    "lint": "yarn lint:pug & yarn lint:style & yarn lint:javascript & yarn tsc",
    "prebuild": "yarn lint",
    "build": "NODE_ENV=production webpack"
  },
  "lint-staged": {
    "*.pug": "yarn lint:pug",
    "*.scss": "yarn lint:style",
    "*.[jt]s?(x)": "yarn lint:javascript"
  },
  "dependencies": {
    "core-js": "3.40.0"
  },
  "devDependencies": {
    "@babel/core": "7.26.7",
    "@babel/preset-env": "7.26.7",
    "@babel/preset-typescript": "7.26.0",
    "@prettier/plugin-pug": "3.2.0",
    "@types/friendly-errors-webpack-plugin": "0.1.7",
    "@types/glob": "8.1.0",
    "@types/html-webpack-plugin": "3.2.9",
    "@types/sass": "1.45.0",
    "@typescript-eslint/eslint-plugin": "8.23.0",
    "@typescript-eslint/parser": "8.23.0",
    "autoprefixer": "10.4.20",
    "babel-loader": "9.2.1",
    "copy-webpack-plugin": "12.0.2",
    "css-loader": "7.1.2",
    "css-minimizer-webpack-plugin": "7.0.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.7.0",
    "eslint-plugin-import": "2.31.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "glob": "11.0.1",
    "husky": "9.1.7",
    "image-minimizer-webpack-plugin": "4.1.3",
    "imagemin": "9.0.0",
    "imagemin-svgo": "11.0.1",
    "lightningcss": "1.29.1",
    "lint-staged": "15.4.3",
    "postcss": "8.5.1",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-loader": "8.1.1",
    "postcss-media-minmax": "5.0.0",
    "postcss-sort-media-queries": "5.2.0",
    "prettier": "3.4.2",
    "pug-plugin": "5.3.0",
    "sass": "1.83.4",
    "sass-loader": "16.0.4",
    "sharp": "0.33.5",
    "stylelint": "16.14.1",
    "stylelint-config-recess-order": "5.1.1",
    "stylelint-config-recommended-scss": "14.1.0",
    "svgo": "3.3.2",
    "tsconfig-paths-webpack-plugin": "4.2.0",
    "typescript": "5.7.3",
    "webpack": "5.97.1",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.2.0"
  }
}
